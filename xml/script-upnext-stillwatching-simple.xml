<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">3012</defaultcontrol>
	<onload>Dialog.Close(fullscreeninfo,true)</onload>
	<onload>Dialog.Close(videoosd,true)</onload>
	<controls>
		<control type="group">
			<include>window-openclose</include>
			<control type="group">
				<height>80</height>
				<!-- Background -->
				<control type="image">
					<top>0</top>
					<width>100%</width>
					<height>80</height>
					<texture colordiffuse="mask-background">background-mask.png</texture>
				</control>
				<control type="group">
					<top>12</top>
					<left>20</left>
					<width>75%</width>
					<!-- buttons -->
					<control type="grouplist">
						<orientation>horizontal</orientation>
						<height>56</height>
						<itemgap>10</itemgap>
						<align>left</align>
						<control type="button" id="3012">
							<label>    $ADDON[service.upnext 30010] $ADDON[service.upnext 30036] [COLOR ProgressBarColor]$INFO[Player.TimeRemaining(ss),,][/COLOR] $ADDON[service.upnext 30035]</label>
							<height>56</height>
							<width min="50">auto</width>
							<font>apptv23</font>
							<aligny>center</aligny>
							<align>center</align>
						</control>
						<control type="button" id="3013">
							<label>$ADDON[service.upnext 30034]</label>
							<height>56</height>
							<width min="50">auto</width>
							<font>apptv23</font>
							<aligny>center</aligny>
							<align>center</align>
						</control>
						<!-- Label -->
						<control type="label">
							<width>auto</width>
							<height>56</height>
							<aligny>center</aligny>
							<font>apptv25</font>
							<label>[CAPITALIZE]$ADDON[service.upnext 30024][/CAPITALIZE]</label>
						</control>
					</control>
					<control type="image">
						<width>46</width>
						<height>46</height>
						<aspect>keep</aspect>
						<texture colordiffuse="ddffffff">nextupicons/30.png</texture>
						<animation effect="slide" end="13,5" time="0" condition="true">Conditional</animation>
						<visible>Integer.IsGreater(Player.TimeRemaining(ss),30)</visible>
					</control>
					<control type="image">
						<width>46</width>
						<height>46</height>
						<aspect>keep</aspect>
						<texture colordiffuse="ddffffff">$INFO[Player.TimeRemaining(ss),nextupicons/,.png]</texture>
						<animation effect="slide" end="13,5" time="0" condition="true">Conditional</animation>
						<visible>!Integer.IsGreater(Player.TimeRemaining(ss),30)</visible>
					</control>
				</control>
			</control>
		</control>
		<control type="progress" id="3014">
			<visible>false</visible>
		</control>
	</controls>
</window>