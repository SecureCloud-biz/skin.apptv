<?xml version="1.0" encoding="utf-8"?>
<window>
	<defaultcontrol always="false">9000</defaultcontrol>
	<menucontrol>6100</menucontrol>
	<onload>ClearProperty(ShowScreenSettings,home)</onload>
	<onload>SetFocus(9000)</onload>
	<onunload>ClearProperty(ShowScreenSettings,home)</onunload>
	<onunload>ClearProperty(ShutdownKodi,home)</onunload>
	<include>zoom-openclose</include>
	<controls>
		<!-- Use Vertical Home menu-->
		<include condition="Skin.HasSetting(homemenu-vertical)" file="Includes_VertHome.xml">VertHomeMenu</include>
		<!-- Use Horizontal Home menu-->
		<include condition="Skin.HasSetting(homemenu-horizontal)" file="Includes_HorzHome.xml">HorzHomeMenu</include>
		<!-- Use Icon Home menu-->
		<include condition="Skin.HasSetting(homemenu-icon)" file="Includes_IconHome.xml">IconHomeMenu</include>

		<include>touch-controls</include>

		<control type="group">
			<!-- Screen Settings Menu -->
			<left>0</left>
			<top>1080</top>
			<animation effect="slide" start="0,0" end="0,-1080">Visible</animation>
			<visible allowhiddenfocus="true">[ControlGroup(6100).HasFocus() | String.IsEqual(Window(home).Property(ShowScreenSettings),show)] + !Skin.HasSetting(lock-screensettings)</visible>
			<include>fadebackground</include>
			<control type="image">
				<!-- Button background -->
				<left>622</left>
				<top>314</top>
				<width>669</width>
				<height>652</height>
				<texture border="14">button-menu-background.png</texture>
			</control>
			<control type="label">
				<!-- Dialog heading -->
				<left>638</left>
				<top>326</top>
				<width>639</width>
				<height>51</height>
				<font>apptv23</font>
				<label>$LOCALIZE[31557]$INFO[Container(6100).NumItems, (,)]</label>
				<align>center</align>
			</control>
			<control type="button">
				<!-- Touch Close button -->
				<left>1260</left>
				<top>298</top>
				<width>48</width>
				<height>48</height>
				<texturefocus>touch-close.png</texturefocus>
				<texturenofocus>touch-close.png</texturenofocus>
				<onclick condition="!String.IsEqual(Window(home).Property(ShowScreenSettings),show)">SetProperty(ShowScreenSettings,show,home)</onclick>
				<onclick condition="String.IsEqual(Window(home).Property(ShowScreenSettings),show)">ClearProperty(ShowScreenSettings,home)</onclick>
				<visible>$EXP[isEnabledTouch]</visible>
			</control>
			<control type="image">
				<left>638</left>
				<top>380</top>
				<width>639</width>
				<height>6</height>
				<texture>separator.png</texture>
			</control>
			<control type="grouplist" id="6100">
				<defaultcontrol>6101</defaultcontrol>
				<left>638</left>
				<top>392</top>
				<width>639</width>
				<height>552</height>
				<itemgap>0</itemgap>
				<onright>ClearProperty(ShowScreenSettings,home)</onright>
				<onright>9000</onright>
				<onleft>ClearProperty(ShowScreenSettings,home)</onleft>
				<onleft>9000</onleft>
				<control type="button" id="6101">
					<!-- Home menu type -->
					<width>639</width>
					<height>69</height>
					<textwidth>1125</textwidth>
					<label>$LOCALIZE[31900] - $VAR[MenuType]</label>
					<font>apptv22</font>
					<onclick>RunScript(script.skin.helper.service,action=setskinsetting,setting=homemenu-typeval,header=$LOCALIZE[31900])</onclick>
					<onclick>AlarmClock(changehome,ReloadSkin(),00:10,silent)</onclick>
					</control>
				<control type="button" id="6102">
					<!-- Home menu Settings Menu -->
					<width>639</width>
					<height>69</height>
					<label>$LOCALIZE[31803]</label>
					<font>apptv22</font>
					<onfocus>Skin.SetString(skinsettingmenu,custom)</onfocus>
					<onclick>ActivateWindow(1152,,return)</onclick>
				</control>
				<control type="radiobutton" id="6103">
					<!-- Time On Home Screen toggle -->
					<width>639</width>
					<height>69</height>
					<label>$LOCALIZE[31888]</label>
					<font>apptv22</font>
					<textwidth>1125</textwidth>
					<onclick>Skin.ToggleSetting(home-time)</onclick>
					<onclick>ReloadSkin()</onclick>
					<selected>!Skin.HasSetting(home-time)</selected>
					<radioposx>1266</radioposx>
				</control>
				<control type="radiobutton" id="6104">
					<!-- Current Weather On Home Screen toggle -->
					<width>639</width>
					<height>69</height>
					<label>$LOCALIZE[31889]</label>
					<font>apptv22</font>
					<textwidth>1125</textwidth>
					<onclick>Skin.ToggleSetting(home-currentweather)</onclick>
					<onclick>ReloadSkin()</onclick>
					<selected>Skin.HasSetting(home-currentweather)</selected>
					<enable>!String.IsEmpty(Weather.plugin)</enable>
					<radioposx>1266</radioposx>
				</control>
				<control type="button" id="6105">
					<!-- player controls button -->
					<width>639</width>
					<height>69</height>
					<label>$LOCALIZE[16003] $LOCALIZE[478]</label>
					<font>apptv22</font>
					<onclick>SetFocus(9000)</onclick>
					<onclick condition="String.IsEqual(Window(home).Property(ShowScreenSettings),show)">ClearProperty(ShowScreenSettings,home)</onclick>
					<onclick>ActivateWindow(playercontrols)</onclick>
					<visible>Player.HasAudio | Player.HasVideo</visible>
				</control>
			</control>
		</control>
	</controls>
</window>