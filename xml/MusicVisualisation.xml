<?xml version="1.0" encoding="utf-8"?>
<window>
	<onload condition="Skin.HasSetting(background-slideshow)">RunScript(script.artistslideshow)</onload>
	<visible>!Window.IsVisible(fullscreenvideo) + !Window.IsActive(script-cu-lrclyrics-main.xml)</visible>
	<controls>
		<include>background</include>
		<control type="group">
			<!-- infos -->
			<visible>Player.ShowInfo</visible>
			<control type="image" id="992">
				<!-- Music logo if available -->
				<left>30</left>
				<top>30</top>
				<width>300</width>
				<height>116</height>
				<texture>$INFO[Window(Home).Property(SkinHelper.Player.Art.ClearLogo)]</texture>
				<aspectratio align="left" aligny="bottom">keep</aspectratio>
				<colordiffuse>mask-background</colordiffuse>
			</control>
			<control type="image">
				<!-- media info background image -->
				<left>0</left>
				<top>700</top>
				<width>1920</width>
				<height>380</height>
				<texture>background.png</texture>
				<colordiffuse>mask-background</colordiffuse>
			</control>
			<control type="image">
				<!-- Cd disk image -->
				<left>208</left>
				<top>735</top>
				<width>322</width>
				<height>322</height>
				<texture fallback="DefaultDVDRom.png">$INFO[Window(Home).Property(SkinHelper.Player.Art.DiscArt)]</texture>
				<aspectratio aligny="bottom">keep</aspectratio>
				<animation effect="slide" start="-153" end="0" time="900" tween="cubic" easing="out" delay="1000">WindowOpen</animation>
				<animation type="WindowClose">
					<effect type="slide" start="0" end="-147" time="100" tween="cubic" easing="in" delay="0" />
					<effect type="fade" start="100" end="0" time="200" />
					<condition type="!Player.Playing" />
				</animation>
				<animation effect="rotate" end="-360" center="auto" time="3000" loop="true" reversible="false" condition="!Player.Paused">Conditional</animation>
				<visible>!String.EndsWith(Control.GetLabel(994),DefaultAudio.png) + !String.EndsWith(Control.GetLabel(994),icon-radio.png)</visible>
			</control>
			<control type="image">
				<left>22</left>
				<top>700</top>
				<height>396</height>
				<width>388</width>
				<texture>case-cd.png</texture>
				<aspectratio>stretch</aspectratio>
				<visible>Skin.HasSetting(media-case) + !String.EndsWith(Control.GetLabel(994),DefaultAudio.png) + !String.EndsWith(Control.GetLabel(994),icon-radio.png)</visible>
			</control>
			<control type="image" id="994">
				<!-- Cover image -->
				<left>64</left>
				<top>728</top>
				<width>338</width>
				<height>338</height>
				<texture fallback="DefaultAudio.png">$VAR[PlayerMusicCover]</texture>
				<aspectratio aligny="bottom">stretch</aspectratio>
			</control>
			<control type="label">
				<!-- Now playing -->
				<left>555</left>
				<top>743</top>
				<width>1023</width>
				<height>38</height>
				<label>$LOCALIZE[31037]</label>
				<font>apptv25</font>
				<textcolor>listselected-text</textcolor>
			</control>
			<control type="label">
				<!-- Partymode enabled -->
				<left>1485</left>
				<top>746</top>
				<width>399</width>
				<height>33</height>
				<label>$LOCALIZE[589]</label>
				<align>right</align>
				<font>apptv22</font>
				<visible>MusicPartyMode.Enabled</visible>
			</control>
			<control type="label">
				<!-- Playlist label -->
				<left>1461</left>
				<top>746</top>
				<width>399</width>
				<height>33</height>
				<align>right</align>
				<label>$INFO[Playlist.Position(music),$LOCALIZE[554]: ]$INFO[Playlist.Length(music), / ]</label>
				<font>apptv22</font>
				<visible>!MusicPartyMode.Enabled + Integer.IsGreater(Playlist.Length(music),1)</visible>
			</control>
			<control type="label">
				<!-- Title label -->
				<left>555</left>
				<top>786</top>
				<width>1320</width>
				<height>38</height>
				<font>apptv25</font>
				<label>$LOCALIZE[19021] - $INFO[MusicPlayer.ChannelName]</label>
				<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
				<visible>Pvr.IsPlayingRadio</visible>
			</control>
			<control type="label">
				<!-- Title label -->
				<left>555</left>
				<top>786</top>
				<width>1320</width>
				<height>38</height>
				<font>apptv25</font>
				<label>$INFO[MusicPlayer.Title]</label>
				<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
				<visible>!Pvr.IsPlayingRadio</visible>
			</control>
			<control type="label">
				<!-- Artist label -->
				<left>555</left>
				<top>830</top>
				<width>1320</width>
				<height>33</height>
				<font>apptv22</font>
				<label>$INFO[MusicPlayer.Artist]</label>
				<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
			</control>
			<control type="label">
				<!-- Album label -->
				<left>555</left>
				<top>872</top>
				<width>1320</width>
				<height>33</height>
				<font>apptv22</font>
				<label>$INFO[MusicPlayer.Album]</label>
				<include condition="Skin.HasSetting(text-autoscroll)">scrolltext</include>
			</control>
			<control type="label">
				<!-- Time label -->
				<left>555</left>
				<top>1034</top>
				<width>300</width>
				<height>33</height>
				<label>$INFO[MusicPlayer.Time]$INFO[MusicPlayer.Duration, / ]</label>
				<font>apptv22</font>
				<visible>!Pvr.IsPlayingRadio</visible>
			</control>
			<control type="group">
				<visible>!Window.IsVisible(musicosd) + !Pvr.IsPlayingRadio</visible>
				<control type="progress" id="1">
					<left>862</left>
					<top>1042</top>
					<width>1012</width>
					<height>18</height>
					<info>Player.Progress</info>
				</control>
				<control type="slider" id="402">
					<!-- Seek slider -->
					<left>862</left>
					<top>1042</top>
					<width>1012</width>
					<height>18</height>
					<action>seek</action>
				</control>
			</control>
		</control>
	</controls>
</window>