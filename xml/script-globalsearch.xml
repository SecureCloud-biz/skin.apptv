<?xml version="1.0" encoding="UTF-8"?>
<window>
	<views>50,51</views>
	
	<menucontrol>7500</menucontrol>
	<include>window-openclose</include>
	<onload>Container.SetViewMode(Skin.String(globalsearch-viewmode))</onload>
	<controls>
		<visible>!Window.IsVisible(movieinformation)</visible>
		<include>background</include>
		<include>fake-overlay</include>
		<control type="label">
			<!-- Search screen heading -->
			<left>1419</left>
			<top>38</top>
			<width>465</width>
			<height>48</height>
			<font>apptv30</font>
			<label>$LOCALIZE[19140]</label>
		</control>
		<control type="label">
			<!-- Search string -->
			<left>1419</left>
			<top>93</top>
			<width>465</width>
			<height>48</height>
			<label>$INFO[Window.Property(GlobalSearch.SearchString)]</label>
			<font>apptv30</font>
		</control>

		<include file="View-General.xml">ListViewSearch</include>
		<include file="View-General.xml">IconViewSearch</include>

		<control type="group">
			<visible>![Window.IsVisible(DialogVideoInfo.xml) | Window.IsVisible(DialogMusicInfo.xml)]</visible>
			<!-- Current search category being checked -->
			<control type="grouplist">
				<left>20</left>
				<top>30</top>
				<width>442</width>
				<align>center</align>
				<itemgap>10</itemgap>
				<orientation>horizontal</orientation>
				<control type="label">
					<width>auto</width>
					<height>55</height>
					<aligny>center</aligny>
					<font>apptv18</font>
					<label>$ADDON[script.globalsearch 32297]</label>
					<visible>Control.IsVisible(991)</visible>
				</control>
				<control type="label" id="991">
					<width>380</width>
					<height>55</height>
					<aligny>center</aligny>
					<font>apptv18</font>
				</control>
			</control>
			<!-- No search items found -->
			<control type="label" id="999">
				<left>436</left>
				<top>0</top>
				<width>1484</width>
				<height>1080</height>
				<align>center</align>
				<aligny>center</aligny>
				<font>apptv30</font>
				<label>$LOCALIZE[284]</label>
			</control>
			<!-- List of matched search categories -->
			<control type="group">
				<control type="fixedlist" id="9000">
					<left>1410</left>
					<top>166</top>
					<width>480</width>
					<height>675</height>
					<itemgap>0</itemgap>
					<movement>6</movement>
					<onup>noop</onup>
					<ondown>990</ondown>
					<onleft>50</onleft>
					<scrolltime tween="cubic" easing="out">500</scrolltime>
					<itemlayout width="480" height="75">
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>480</width>
							<height>75</height>
							<texture border="9">button-default.png</texture>
						</control>
						<control type="label">
							<left>27</left>
							<top>0</top>
							<height>75</height>
							<width>426</width>
							<aligny>center</aligny>
							<font>apptv22</font>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="label">
							<left>27</left>
							<top>0</top>
							<height>75</height>
							<width>426</width>
							<align>right</align>
							<aligny>center</aligny>
							<font>apptv22</font>
							<label>$INFO[ListItem.Label2]</label>
						</control>
					</itemlayout>
					<focusedlayout width="480" height="75">
						<control type="image">
							<left>0</left>
							<top>0</top>
							<width>480</width>
							<height>75</height>
							<texture border="9">button-default-focus.png</texture>
							<animation effect="fade" start="100" end="60" condition="!Control.HasFocus(9000)">conditional</animation>
						</control>
						<control type="label">
							<left>27</left>
							<top>0</top>
							<height>75</height>
							<width>426</width>
							<aligny>center</aligny>
							<font>apptv22</font>
							<label>$INFO[ListItem.Label]</label>
						</control>
						<control type="label">
							<left>27</left>
							<top>0</top>
							<height>75</height>
							<width>426</width>
							<align>right</align>
							<aligny>center</aligny>
							<font>apptv22</font>
							<label>$INFO[ListItem.Label2]</label>
						</control>
					</focusedlayout>
				</control>
			</control>
			<!-- New Search -->
			<control type="button" id="990">
				<left>1410</left>
				<top>842</top>
				<width>480</width>
				<height>75</height>
				<label>$ADDON[script.globalsearch 32299]</label>
				<align>left</align>
				<aligny>center</aligny>
				<font>apptv22</font>
				<onup>SetFocus(9000,99,absolute)</onup>
				<onleft>50</onleft>
			</control>
		</control>

		<include>touch-controls</include>
		<control type="group">
			<!-- Screen Settings Menu -->
			<left>0</left>
			<top>1080</top>
			<animation effect="slide" start="0,0" end="0,-1080">Visible</animation>
			<visible allowhiddenfocus="true">[ControlGroup(7500).HasFocus() | String.IsEqual(Window(home).Property(ShowScreenSettings),show)] + !Skin.HasSetting(lock-screensettings)</visible>
			<include>fadebackground</include>
			<control type="image">
				<!-- Button background -->
				<left>622</left>
				<top>364</top>
				<width>669</width>
				<height>352</height>
				<texture border="14">button-menu-background.png</texture>
			</control>
			<control type="label">
				<!-- Dialog heading -->
				<left>638</left>
				<top>376</top>
				<width>639</width>
				<height>51</height>
				<font>apptv23</font>
				<label>$LOCALIZE[31557]$INFO[Container(7500).NumItems, (,)]</label>
				<align>center</align>
			</control>
			<control type="button">
				<!-- Touch Close button -->
				<left>1260</left>
				<top>348</top>
				<width>48</width>
				<height>48</height>
				<texturefocus>touch-close.png</texturefocus>
				<texturenofocus>touch-close.png</texturenofocus>
				<onclick condition="!String.IsEqual(Window(home).Property(ShowScreenSettings),show)">SetProperty(ShowScreenSettings,show,home)</onclick>
				<onclick condition="String.IsEqual(Window(home).Property(ShowScreenSettings),show)">ClearProperty(ShowScreenSettings,home)</onclick>
				<visible>$EXP[isEnabledTouch]</visible>
			</control>
			<control type="image">
				<left>638</left>
				<top>430</top>
				<width>639</width>
				<height>6</height>
				<texture>separator.png</texture>
			</control>
			<control type="grouplist" id="7500">
				<defaultcontrol>2</defaultcontrol>
				<left>638</left>
				<top>442</top>
				<width>639</width>
				<height>276</height>
				<itemgap>0</itemgap>
				<onright>ClearProperty(ShowScreenSettings,home)</onright>
				<onright>50</onright>
				<onleft>ClearProperty(ShowScreenSettings,home)</onleft>
				<onleft>50</onleft>
				<control type="button" id="2">
					<!-- View as button -->
					<width>639</width>
					<height>69</height>
					<font>apptv22</font>
					<label>$LOCALIZE[100]</label>
					<onclick>Container.NextViewMode</onclick>
					<onclick>Skin.SetString(globalsearch-viewmode,$INFO[Container.Viewmode])</onclick>
				</control>
				<control type="button" id="800">
					<!-- now playing -->
					<width>639</width>
					<height>69</height>
					<font>apptv22</font>
					<label>$LOCALIZE[13350]</label>
					<onclick>ActivateWindow(videoplaylist)</onclick>
					<visible>!String.IsEqual(Playlist.Length(video),0)</visible>
				</control>
			</control>
		</control>
			<control type="group">
				<visible>Control.IsVisible(50) | Control.IsVisible(51)</visible>
				<include content="page-indicator">
					<param name="indicatorleft" value="864" />
					<param name="indicatortop" value="0" />
					<param name="indicatorwidth" value="192" />
					<param name="indicatorheight" value="48" />
					<param name="indicatororientation" value="horizontal" />
					<param name="grp1indicate" value="[ControlGroup(7500).HasFocus()|String.IsEqual(Window(home).Property(ShowScreenSettings),show)]" />
					<param name="grp1visible" value="[!Skin.HasSetting(lock-screensettings)]" />
					<param name="grp2indicate" value="[Control.HasFocus(1250)|Control.HasFocus(1251)]" />
					<param name="grp2visible" value="[!String.IsEqual(Skin.String(show-scrollbar),$LOCALIZE[31877])]" />
					<param name="grp3indicate" value="[Control.HasFocus(50)|Control.HasFocus(51)]" />
					<param name="grp3visible" value="[true]" />
					<param name="grp4indicate" value="Control.HasFocus(9000)" />
					<param name="grp4visible" value="[true]" />
					</include>
			</control>
	</controls>
</window>
